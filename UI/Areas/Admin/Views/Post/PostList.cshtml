@{
    ViewBag.Title = "PostList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


@model List<DTO.PostDTO>
<section class="content-header">

    <h1>Post List</h1>
    <ol class=" breadcrumb float-sm-left">
        <li class="breadcrumb-item">
            <a>Admin</a>
        </li>
        <li class="breadcrumb-item">
            <a>Post</a>
        </li>
        <li class="breadcrumb-item active">
            <a>Post List</a>
        </li>
    </ol>
</section>
<br/>
<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/Post/AddPost'">Add Post</button>
</div>


<div class="card">
    <!-- Small boxes (Stat box) -->

    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Category Name</th>
                <th>Add Date</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr id="a_@item.ID">
                    <td>@item.Title</td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @item.AddDate.ToString("dd.MM.yyyy, dddd")

                    </td>
                    <td align="center" valign="middle">
                        <a href="/Admin/Post/UpdatePost/@item.ID">
                            <br/>
                            <img src="~/Areas/Admin/Content/icons/refresh.png"/>
                        </a>
                    </td>
                    <td align="center" valign="middle">
                        <a href="#">
                            <br/>
                            <img src="~/Areas/Admin/Content/icons/delete.png" onclick="AskQuestion('/Admin/Post/DeletePost/',@item.ID)"/>

                        </a>
                    </td>

                </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <th>Title</th>
                <th>Category Name</th>
                <th>Add Date</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            </tfoot>
        </table>
    </div>
    @* @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml") *@
    <!-- /.card-body -->
</div>
<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>
<!-- /.card -->